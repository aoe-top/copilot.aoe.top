# MongoDB
MONGODB_URI=mongodb+srv://USER:PASSWORD@cluster.example.mongodb.net/dbname?retryWrites=true&w=majority
MONGODB_DB=Glosc

# GitHub OAuth (create an OAuth App in GitHub)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Microsoft OAuth (Azure App Registration)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
# Optional, default is "common"
MICROSOFT_TENANT_ID=common

# Optional: OAuth fetch timeout
OAUTH_FETCH_TIMEOUT_MS=30000

# Optional: GitHub connectivity in restricted networks
# HTTPS_PROXY=http://127.0.0.1:7890
# HTTP_PROXY=http://127.0.0.1:7890
# GITHUB_FETCH_TIMEOUT_MS=30000

# Optional auth settings
AUTH_SESSION_COOKIE_NAME=glosc_session
AUTH_SESSION_TTL_DAYS=30
